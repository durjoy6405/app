<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup">
    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#746AB0"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/textLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:textColor="@color/white"
                android:id="@+id/signupText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Signup"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="40dp">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/formLayout"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="@color/white"
            android:orientation="vertical">
            <TableRow
                android:id="@+id/nameTableRow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/userNameText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Name:"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="25dp">

                </TextView>
                <EditText
                    android:id="@+id/nameEditText"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"></EditText>
            </TableRow>
            <TableRow
                android:id="@+id/emailTableRow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Email:"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="25dp">

                </TextView>
                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"></EditText>
            </TableRow>
            <TableRow
                android:id="@+id/phoneTableRow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/phoneNameText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Phone:"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="25dp">

                </TextView>
                <EditText
                    android:id="@+id/phoneEditText"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"></EditText>
            </TableRow>
            <TableRow
                android:id="@+id/passwordTableRow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/passwordText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Password:"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="25dp">

                </TextView>
                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:inputType="numberPassword"></EditText>
            </TableRow>
            <TableRow
                android:id="@+id/passwordReTableRow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/passwordReText"
                    android:layout_width="0dp"
                    android:layout_weight="1.35"
                    android:layout_height="match_parent"
                    android:text="Re-enter Password:"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="25dp">

                </TextView>
                <EditText
                    android:id="@+id/passwordReEditText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"></EditText>
            </TableRow>
            <TableRow
                android:id="@+id/rememberUserIdRow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <CheckBox
                    android:id="@+id/firstCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Remember User ID"
                    android:textStyle="bold"
                    android:textSize="25dp"></CheckBox>
            </TableRow>
            <TableRow
                android:id="@+id/rememberPasswordRow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <CheckBox
                    android:id="@+id/secondCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Remember Password"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </TableRow>
            <LinearLayout
                android:id="@+id/loginLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/loginQtnText"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:text="Already have an account?"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black">

                </TextView>
                <TextView
                    android:id="@+id/loginText"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Login"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#1215FA">

                </TextView> </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.55"
            android:orientation="horizontal">
            <Button
                android:textColor="@color/white"
                android:id="@+id/exitBtn"
                android:gravity="center"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Exit"
                android:textSize="25dp"
                android:textStyle="bold"
                android:background="#746AB0">

            </Button>

            <Button
                android:textColor="@color/white"
                android:id="@+id/goBtn"
                android:gravity="center"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Go"
                android:textSize="25dp"
                android:textStyle="bold"
                android:background="#746AB0">

            </Button>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>